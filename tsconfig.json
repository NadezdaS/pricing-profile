{
  "compilerOptions": {
    "target": "ES2020",                        
    "module": "commonjs",                      
    "lib": ["ES2020"],                         
    "outDir": "dist",                        
    "rootDir": ".",                        
    "strict": true,                            
    "esModuleInterop": true,                   
    "moduleResolution": "node",                
    "resolveJsonModule": true,                 
    "skipLibCheck": true,                      
    "forceConsistentCasingInFileNames": true,  
    "types": ["node", "jest"]                  
  },
  "include": ["server", "shared"],
  "exclude": ["node_modules", "dist", "client"]          
}